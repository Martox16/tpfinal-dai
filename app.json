{
  "expo": {
    "name": "TuNombreDeApp",
    "slug": "tu-nombre-de-app",
    "privacy": "public",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSContactsUsageDescription": "Esta aplicaci√≥n necesita acceder a tus contactos."
      }
    },
    "android": {
      "permissions": [
        "READ_CONTACTS"
      ]
    }
  }
 }
